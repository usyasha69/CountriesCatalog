<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pk.countriescatalog.UI.activity.SelectionActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/as_show_regions"
            android:text="@string/as_show_regions"
            android:layout_margin="@dimen/as_buttons_margin"
            android:textSize="@dimen/as_buttons_text_size"
            android:textColor="@color/colorPrimary"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/as_show_sub_regions"
            android:text="@string/as_show_sub_regions"
            android:layout_margin="@dimen/as_buttons_margin"
            android:textSize="@dimen/as_buttons_text_size"
            android:textColor="@color/colorPrimary"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/as_show_countries"
            android:text="@string/as_show_countries"
            android:layout_margin="@dimen/as_buttons_margin"
            android:textSize="@dimen/as_buttons_text_size"
            android:textColor="@color/colorPrimary"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
